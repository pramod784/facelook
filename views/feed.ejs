<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Facelook Feed</title>

    <style>
        body {
            background: #f0f2f5;
        }

        .post-box {
            background: white;
            padding: 18px;
            border-radius: 12px;
            margin-bottom: 18px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            transition: transform 0.1s ease, box-shadow 0.2s ease;
        }

        /* Hover effect */
        .post-box:hover {
            transform: scale(1.01);
            box-shadow: 0 4px 14px rgba(0,0,0,0.12);
        }

        /* Odd-even shading */
        .post-box:nth-child(odd) {
            background: #ffffff;
        }
        .post-box:nth-child(even) {
            background: #f7f9fc;
        }

        /* Username style */
        .post-username {
            color: #1877f2;
            font-weight: 600;
            font-size: 1.1rem;
        }
    </style>
</head>
<body class="container py-4">

    <h2 class="mb-4 text-primary">Welcome, <%= username %></h2>
    <div class="clearfix"></div>
    <div class="d-flex justify-content-end gap-2 mb-4">
        <a class="btn btn-success" href="/create-post">Create Post</a>
        <a class="btn btn-danger" href="/logout">Logout</a>
    </div>
    <% posts.forEach(p => { %>
        <% 
            const d = new Date(p.createdAt);
            const options = { day: '2-digit', month: 'short', year: 'numeric' };
            const dateStr = d.toLocaleDateString('en-GB', options); 
            
            const timeStr = d.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit',
                hour12: true 
            });
        %>
        <div class="post-box">
            <div class="post-username"><%= p.username %></div>
            <p class="mt-2 mb-0"><%= p.content %></p>
            <p class="mt-2 mb-0"><%= dateStr +" "+ timeStr %></p>
        </div>
    <% }) %>

</body>
</html>
